# ~/.config/sway/config

######################################
### BASIC SETTINGS AND APPEARANCE ###
######################################
set $mod Mod4                 # Modifier key (Super/Windows)
set $terminal kitty           # Terminal emulator
set $fileManager dolphin      # File manager
set $menu wofi --show drun    # Application launcher

gaps inner 5                  # Inner gaps between windows
gaps outer 5                  # Outer gaps between windows
smart_borders yes             # Enable smart borders
smart_gaps on                 # Enable smart gaps
border pixel 1                # Border size for tiled windows
default_border pixel          # Default border style
default_floating_border pixel # Default border style for floating windows

####################################
### OUTPUT (MONITOR CONFIGURATION) ###
####################################
output DP-2 resolution 2560x1440@165Hz position 0 0

####################################
### ENVIRONMENT VARIABLES ###
####################################
exec export EDITOR=nvim
exec export LIBVA_DRIVER_NAME=nvidia
exec export XDG_SESSION_TYPE=wayland
exec export GBM_BACKEND=nvidia-drm
exec export __GLX_VENDOR_LIBRARY_NAME=nvidia

###########################
### INPUT CONFIGURATION ###
###########################
input * {
    xkb_layout us,is
    xkb_options grp:alt_shift_toggle,caps:escape
    natural_scroll disabled
    pointer_accel 0
}

######################
### KEYBINDINGS ###
######################
### Application Launchers ###
bindsym $mod+Return exec $terminal      # Launch terminal
bindsym $mod+E exec $fileManager        # Launch file manager
bindsym $mod+D exec $menu               # Launch application menu
bindsym $mod+W exec firefox             # Launch browser

### Window Management ###
bindsym $mod+F fullscreen toggle        # Toggle fullscreen
bindsym $mod+Shift+Q kill               # Close focused window
bindsym $mod+Shift+Space floating toggle # Toggle floating mode

### Focus Movement ###
bindsym $mod+H focus left
bindsym $mod+L focus right
bindsym $mod+J focus down
bindsym $mod+K focus up

### Window Movement ###
bindsym $mod+Shift+H move left
bindsym $mod+Shift+L move right
bindsym $mod+Shift+J move down
bindsym $mod+Shift+K move up

### Workspaces ###
# Switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# Move container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

### Volume Controls ###
bindsym XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
bindsym XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
bindsym XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle

### Mouse Bindings ###
mode "resize" {
    bindsym Left resize shrink width 10px
    bindsym Right resize grow width 10px
    bindsym Up resize shrink height 10px
    bindsym Down resize grow height 10px
    bindsym Return mode "default" # Return to default mode
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"  # Enter resize mode

